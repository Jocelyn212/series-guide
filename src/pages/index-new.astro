---
import SerieCard from "../components/SerieCard";
import { getSeries, type Serie } from "../lib/mongo";
import "../styles/global.css";

// Obtiene todas las series desde MongoDB
const seriesData = await getSeries();
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SeriesGuide - An치lisis Profesionales de Series</title>
    <meta
      name="description"
      content="Descubre an치lisis detallados de las mejores series de TV: House of the Dragon, The Boys, Stranger Things, Severance y m치s."
    />
  </head>
  <body class="bg-gray-50">
    {/* Navigation */}
    <nav class="bg-white shadow-md">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <a href="/" class="text-xl font-bold text-blue-600"
              >游닠 SeriesGuide</a
            >
          </div>
          <div class="flex items-center space-x-4">
            <a href="/" class="text-blue-600 font-medium">Series</a>
            <a
              href="/analisis"
              class="text-gray-600 hover:text-blue-600 transition-colors"
              >An치lisis</a
            >
          </div>
        </div>
      </div>
    </nav>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      {/* Hero Section */}
      <div class="text-center mb-12">
        <h1 class="text-5xl font-bold text-gray-800 mb-4">
          An치lisis Profesionales de Series
        </h1>
        <p class="text-gray-600 text-xl max-w-3xl mx-auto mb-8">
          Explora an치lisis detallados, teor칤as fascinantes y interpretaciones
          profundas de las series m치s populares y aclamadas de la televisi칩n
          moderna.
        </p>

        {/* Stats */}
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-2xl mx-auto">
          <div class="bg-white p-4 rounded-lg shadow-md">
            <div class="text-2xl font-bold text-blue-600">
              {seriesData.length}
            </div>
            <div class="text-gray-600 text-sm">Series Analizadas</div>
          </div>
          <div class="bg-white p-4 rounded-lg shadow-md">
            <div class="text-2xl font-bold text-green-600">
              {seriesData.filter((s) => s.status === "ongoing").length}
            </div>
            <div class="text-gray-600 text-sm">En Emisi칩n</div>
          </div>
          <div class="bg-white p-4 rounded-lg shadow-md">
            <div class="text-2xl font-bold text-purple-600">
              {
                seriesData.reduce(
                  (total, serie) => total + serie.platforms.length,
                  0
                )
              }
            </div>
            <div class="text-gray-600 text-sm">Plataformas</div>
          </div>
        </div>
      </div>

      {/* Filter Section */}
      <div class="mb-8">
        <div class="flex flex-wrap gap-2 justify-center">
          <button
            class="bg-blue-600 text-white px-4 py-2 rounded-full text-sm font-medium"
          >
            Todas
          </button>
          <button
            class="bg-gray-200 text-gray-700 px-4 py-2 rounded-full text-sm font-medium hover:bg-gray-300 transition-colors"
          >
            En Emisi칩n
          </button>
          <button
            class="bg-gray-200 text-gray-700 px-4 py-2 rounded-full text-sm font-medium hover:bg-gray-300 transition-colors"
          >
            Finalizadas
          </button>
          <button
            class="bg-gray-200 text-gray-700 px-4 py-2 rounded-full text-sm font-medium hover:bg-gray-300 transition-colors"
          >
            Sci-Fi
          </button>
          <button
            class="bg-gray-200 text-gray-700 px-4 py-2 rounded-full text-sm font-medium hover:bg-gray-300 transition-colors"
          >
            Drama
          </button>
        </div>
      </div>

      {/* Series Grid */}
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6"
      >
        {
          seriesData.map((serie: Serie) => (
            <SerieCard
              title={serie.title}
              description={serie.description}
              genre={serie.genre}
              network={serie.network}
              startYear={serie.startYear}
              endYear={serie.endYear}
              status={serie.status}
              imdbRating={serie.imdbRating}
              posterUrl={serie.posterUrl}
              platforms={serie.platforms}
              slug={serie.slug}
            />
          ))
        }
      </div>

      {/* Empty State */}
      {
        seriesData.length === 0 && (
          <div class="text-center py-12">
            <div class="text-6xl mb-4">游닠</div>
            <h3 class="text-xl font-semibold text-gray-600 mb-2">
              No hay series disponibles
            </h3>
            <p class="text-gray-500">
              Ejecuta el script de poblaci칩n de datos para agregar series.
            </p>
          </div>
        )
      }
    </main>

    {/* Footer */}
    <footer class="bg-gray-800 text-white mt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="text-center">
          <p>
            &copy; 2024 SeriesGuide. An치lisis profesional de series de
            televisi칩n.
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
