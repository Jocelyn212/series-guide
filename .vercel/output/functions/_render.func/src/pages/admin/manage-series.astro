                            <div class="text-sm font-medium text-white">
                              {serie.title}
                            </div>
                            <div class="text-sm text-gray-400">
                              {serie.network}
                            </div>
                            <div class="text-xs text-gray-500">
                              {serie.genre.slice(0, 2).join(", ")}
